<html>
  <head>
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body class="ff-sans">
    <header class="pa-3 bg-black white">
      <h1 class="f-6 ma-0 ff-fantasy mv-1">CatSay</h1>
      <h2 class="f-5 ma-0 ff-fantasy mv-1">The Website That Makes Cats Say Things</h2>
    </header>
    <main class="w-50">
      <section data-testid="stairs" class="<%= @pic == 'stairs' ? 'db' : 'dn' %> pos-relative" style="width: 500px">
        <div class="pos-absolute bg-white black ba bw-3 br-5 f-4 ff-fantasy tc pv-3" style="left: 230px; top: 50px; width: 200px;">
          <%= @carlos_message %>
        </div>
        <div class="pos-absolute bg-white black ba bw-3 br-5 f-4 ff-fantasy tc pv-3" style=" right: 0; bottom: 150px; width: 200px;" >
          <%= @zoni_message %>
        </div>
        <img src="/images/stairs.jpg" class="w-100 mw-100">
      </section>
      <section data-testid="piano" class="<%= @pic == 'piano' ? 'db' : 'dn' %> pos-relative" style="width: 500px">
          <div class="pos-absolute bg-white black ba bw-3 br-5 f-3 lh-copy fw-7 ff-fantasy tc pv-3" style="left: 10px; top: 60px; width: 200px;">
            <%= @zoni_message %>
          </div>
          <div class="pos-absolute bg-white black ba bw-3 br-5 f-3 lh-copy fw-7 ff-fantasy tc pv-3" style=" right: 0; bottom: 200px; width: 200px;" >
            <%= @carlos_message %>
          </div>
        <img src="/images/piano.jpg" class="w-100 mw-100">
      </section>
      <section data-testid="box" class="<%= @pic == 'box' ? 'db' : 'dn' %> pos-relative" style="width: 500px">
          <div class="pos-absolute bg-white black ba bw-3 br-5 f-3 lh-copy fw-7 ff-fantasy tc pv-3" style="left: 10px; bottom: 10px; width: 200px;">
            <%= @zoni_message %>
          </div>
          <div class="pos-absolute bg-white black ba bw-3 br-5 f-3 lh-copy fw-7 ff-fantasy tc pv-3" style=" right: 80px; bottom: 20px; width: 200px;" >
            <%= @carlos_message %>
          </div>
        <img src="/images/box.jpg" class="w-100 mw-100">
      </section>
      <form action="/" method="POST" class="pv-3">
        <label class="pv-2 flex items-center" for="zoni-message">
          <div class="w-10">
          <img src="/images/zoni.png" class="h-6">
          </div>
          <span class="w-30 db mt-2 mb-1 ws-nowrap mr-2">What should Zoni say?</span>
          <div>
            <input id="zoni-message" value="<%= @zoni_message %>" type="text" name="zoni-message" class="ff-fantasy w-auto db bg-gray-lightest pa-2 f-3 lh-copy ba bc-gray br-1">
            <% if @ideas.length > 0 %>
              <div>
                How about “<span class="f-4 ff-fantasy"><%= @ideas[0] %></span>”
              </div>
            <% end %>
          </div>
        </label>
        <label class="pv-2 flex items-center" for="carlos-message">
          <div class="w-10">
            <img src="/images/carlos.png" class="h-6">
          </div>
          <span class="db w-30 mt-2 mb-1 ws-nowrap mr-2">What should Carlos Rosario say?</span>
          <div>
            <input id="carlos-message" value="<%= @carlos_message %>" type="text" name="carlos-message" class="ff-fantasy w-auto db bg-gray-lightest pa-2 f-3 lh-copy ba bc-gray br-1">
            <% if @ideas.length > 1 %>
              <div>
                How about “<span class="f-3 ff-fantasy"><%= @ideas[1] %></span>”
              </div>
            <% end %>
          </div>
        </label>
        </div>
        <label class="db pv-2 flex items-center" for="where">
          <div class="w-10">&nbsp;</div>
          <span class="db mt-2 mb-1 mr-2 ws-nowrap w-30">
            Where should they be?
          </span>
          <select id="where" name="where" class="pa-2 f-3 ba bc-gray bg-gray-lightest br-1 w-auto ff-fantasy">
            <option>--Select Where--</option>
            <option <%= @pic == "box" ? "selected" : "" %> value="box">In an box together</option>
            <option <%= @pic == "piano" ? "selected" : "" %> value="piano">On the piano</option>
            <option <%= @pic == "stairs" ? "selected" : "" %> value="stairs">As kittens on the stairs</option>
          </select>
        </label>
        <div class="flex items-center mt-3">
          <div class="w-40 mr-2">&nbsp;</div>
          <div class="flex flex-column">
            <button class="dib ph-4 pv-3 ba br-4 bg-black white fw-bold tc f-3 ws-nowrap">
              Command My Cats!
            </button>
            <% if @ideas.length > 1 %>
              <a title="Show Random Image" class="mt-3 ba tdn tc br-4 bg-white black ph-4 pv-3 f-2 fw-bold ws-nowrap" href="/random">Or try a random one!</a>
            <% end %>
          </div>
        </div>
      </form>
    </main>
  </body>
</html>

